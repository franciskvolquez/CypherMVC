@model CypherMVC.Models.DashBoardVM

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Welcome to the Feedback Application! <br />
            <small>Here you can manage the messages and tasks for our customers.</small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                Latest Messages
            </div>
            <div class="panel-body">
                <table class="table table-responsive list-view">
                    <thead>
                        <tr>
                            <th>From</th>
                            <th>Subject</th>
                            <th>Sent</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var message in Model.Messages)
                       {
                        <tr>
                            <td>@message.Author</td>
                            <td>@message.Subject</td>
                            <td>@message.Created</td>
                            <td>@Html.ActionLink("View", "Reply","Messages",new { Id = message.MessageThreadId },null)</td>
                        </tr>
                       }
                        
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("See all", "ViewAll", "Messages",null,new { @class = "pull-right btn btn-primary"}) <br />
                <span class="clearfix"></span>
            </div>
        </div>
        <div class="panel panel-red">
            <div class="panel-heading">
                Admin Tasks
            </div>
            <div class="panel-body">
                <table class="table table-responsive list-view">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Due Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var task in Model.Tasks)
                       {
                        <tr>
                            <td>@task.Title</td>
                            <td>@task.Description</td>
                            <td>@task.DueDate</td>
                            <td>@Html.ActionLink("View", "CreateEdit", "Task", new { Id = task.Id}, null)</td>
                        </tr>
                       }
                        
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("See all","ViewAll","Task",null,new { @class="pull-right btn btn-primary"})
              
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-sm-12">
           @Html.Action("Survey")
        </div>
        <div class="col-sm-12">
            @Html.Action("Suggestion")           
        </div>
    </div>
</div>